<div class="container">
  <h3>Edit your profile</h3>

  <form action='/updateprofile' method='post'>
    <div class='form-group'>
      <label> Name </label>
      <input type='text' class='form-control' name='name' value='<%= currentUser.local.name %>'>
    </div>
    <div class='form-group'>
      <label> Email </label>
      <input type='text' class='form-control' name='email' value='<%= currentUser.local.email %>'>
    </div>
    <div class='form-group'>
      <label> Password </label>
      <input type='password' class='form-control' name='password'>
    </div>

    <button type='submit' class='btn btn-success no-rounded col-md-2'> Edit User </button>
  </form>
</div>
